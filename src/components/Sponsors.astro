---
import { SPONSORS } from "../consts/sponsors";

const firstRow = SPONSORS.slice(0, 5);
const secondRow = SPONSORS.slice(5);
---

<section id="sponsors" class="mx-auto max-w-xl py-36">
  <h2 class="mb-4 text-4xl font-light text-center">
    <strong class="font-normal"> Patrocinadores</strong> del evento
  </h2>
  <div class="flex justify-around gap-4 flez-wrap w-full">
    {
      firstRow.map(({ url, image, name, label }) => (
        <a
          href={url}
          target="_blank"
          aria-label={label ?? name}
          rel="noopener noreferrer"
          class="size-14 hover:scale-125 transition text-[#2a1f26] flex justify-center items-center"
        >
          <image.logo
            width={image.width}
            height={image.height}
            class="h-14 w-auto"
          />
        </a>
      ))
    }
  </div>
  <div class="flex justify-around gap-4 w-full flex-wrap">
    {
      secondRow.map(({ url, image, name, label }) => (
        <a
          href={url}
          target="_blank"
          aria-label={label ?? name}
          rel="noopener noreferrer"
          class="size-14 hover:scale-125 transition text-[#2a1f26] flex justify-center items-center"
        >
          <image.logo
            width={image.width}
            height={image.height}
            class="h-14 w-auto"
          />
        </a>
      ))
    }
  </div>
</section>
